@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model List<clsAdminAppRecord>

<!-- Start Content-->
<div class="container-fluid">

    <div class="row">

        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">External Applications</h4>

                    <table class="table table-striped table-responsive table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Logo</th>
                                <th>App Name</th>
                                <th>URL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td nowrap class="p-1"><img src="@record.LogoFilePath" alt="@record.AppName" style="max-height:50px;" /></td>
                                    <td nowrap class="p-1">@record.AppName</td>
                                    <td nowrap class="p-1"><a href="@record.AppUrl" target="_blank">@record.AppUrl</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div> <!-- end card-body -->
            </div>  <!-- end card -->

        </div>
        <!-- end col -->

    </div>
</div>
