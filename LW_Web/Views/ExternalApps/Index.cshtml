@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using LW_Data
@model List<clsAdminAppRecord>

<!-- Start Content-->
<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title" style="color:darkcyan">APPS</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">

        <div class="col-12">

            <div class="card">
                <div class="card-body">

                    <table class="table table-striped table-responsive table-bordered table-hover">
                        <tbody>
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td class="p-1" style="max-width:80px; width:80px; text-align:center; vertical-align:middle;">
                                        <a href="@record.URL" target="_blank" class="d-flex justify-content-center align-items-center" style="height:100%;">
                                            <img src="@record.LogoFilePath" alt="@record.AppName" style="max-height:50px;" class="mx-auto d-block" />
                                        </a>
                                    </td>
                                    <td class="p-1 align-middle text-left" style="font-size:1.25rem;padding-left:20px;">
                                        <a href="@record.URL" target="_blank">@record.AppName</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>

                </div> <!-- end card-body -->
            </div>  <!-- end card -->

        </div>
        <!-- end col -->

    </div>
</div>
