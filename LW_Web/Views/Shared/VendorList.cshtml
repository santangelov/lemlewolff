
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model List<LW_Data.clsVendorRecord>


<!-- Start Content-->
<div class="container-fluid">

    <div class="row">

        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Vendors</h4>

                    <a href="@Url.Action("Create", "Vendor")" class="btn btn-success mb-3">+ Add New Vendor</a>

                    <table class="table table-striped table-responsive table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Vendor Name</th>
                                <th>Vendor Code</th>
                                <th>Is Subcontractor</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @using LW_Security

                            @foreach (var record in Model)
                            {
                                <tr data-id="@record.VendorID">
                                    <td nowrap class="p-1">@record.VendorName</td>
                                    <td nowrap class="p-1">@record.VendorCode</td>
                                    <td nowrap class="p-1">@record.isSubcontractor</td>
                                    <td nowrap class="p-1">@Html.Raw(clsSecurity.isUserAdmin() ? $"<a href=\"/Vendor/Edit/{record.VendorID}\">Edit</a>" : "Edit")</td>
                                </tr>
                             }
                        </tbody>
                    </table>

                </div> <!-- end card-body -->
            </div>  <!-- end card -->

        </div>
        <!-- end col -->

    </div>
</div>






