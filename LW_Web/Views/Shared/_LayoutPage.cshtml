            </div>
        </div>
        <!-- ========== Left Sidebar End ========== -->
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <div class="content">
                @RenderBody()
            </div>
            <!-- end content -->
            <!-- Footer Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <script>document.write(new Date().getFullYear())</script> © The Lemle & Wolff Companies
                        </div>
                        <div class="col-md-6">
                            <div class="text-md-end footer-links d-none d-md-block">
                                <a href="javascript: void(0);">About</a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->

    </div>
    <!-- END wrapper -->
    <!-- Vendor js -->
    <script src="~/assets/js/vendor.min.js"></script>
    <script src="~/assets/js/hyper-config.js?ver=2"></script>

    <script>
        (function () {
            // Force the runtime config + HTML attrs to match what you want.
            // This removes the "first load wrong, refresh right" behavior.
            var h = document.documentElement;

            // 1) Kill any stored override for this request
            sessionStorage.removeItem("__HYPER_CONFIG__");

            // 2) Ensure config object exists
            window.config = window.config || {};
            window.config.layout = window.config.layout || {};
            window.config.topbar = window.config.topbar || {};
            window.config.sidenav = window.config.sidenav || {};

            // 3) Force the exact settings you want
            window.config.theme = "light";
            window.config.nav = "vertical";
            window.config.layout.mode = "fluid";
            window.config.layout.position = "scrollable";
            window.config.topbar.color = "dark";
            window.config.sidenav.color = "dark";
            window.config.sidenav.size = "default";
            window.config.sidenav.user = false;

            // 4) Force the HTML attributes too (so CSS matches immediately)
            h.setAttribute("data-theme", "light");
            h.setAttribute("data-topbar-color", "dark");
            h.setAttribute("data-sidenav-color", "dark");
            h.setAttribute("data-sidenav-size", "default");
            h.setAttribute("data-sidenav-user", "false");
            h.setAttribute("data-layout-mode", "fluid");
            h.setAttribute("data-layout-position", "scrollable");
        })();
    </script>

    <!-- App js -->
    <script src="~/assets/js/app.min.js"></script>

    <!-- Scripts from View Page -->
    @RenderSection("scripts", required: false)

    <script>
        (function () {
            let spinnerTimer = null;

            function showSpinner() {
                const loader = document.getElementById("page-loader");
                if (loader) loader.classList.add("active");
            }

            function armSpinner() {
                if (spinnerTimer) return;

                spinnerTimer = setTimeout(function () {
                    showSpinner();
                }, 800); // 1 second delay = 1000
            }

            document.addEventListener("click", function (e) {
                const a = e.target.closest("a");
                if (!a) return;

                const href = (a.getAttribute("href") || "").trim();

                if (
                    a.target === "_blank" ||
                    a.hasAttribute("data-bs-toggle") ||
                    a.hasAttribute("data-toggle") ||
                    href === "" ||
                    href === "#" ||
                    href.startsWith("javascript:")
                ) {
                    return;
                }

                armSpinner();
            }, true);
        })();
    </script>


</body>
</html> 