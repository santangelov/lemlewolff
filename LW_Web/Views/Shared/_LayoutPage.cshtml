    <link rel="stylesheet" href="~/assets/css/icons.min.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/css/app-modern.min.css" type="text/css" id="app-style" />
    <link rel="stylesheet" href="~/assets/css/lw-custom.css?ver=1.01" type="text/css" />

    <script type="text/javascript" src="~/assets/jquery/jquery-3.6.0.min.js"></script>

</head>

<body>
